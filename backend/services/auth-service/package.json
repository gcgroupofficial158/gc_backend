{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for GC Group",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:load",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": ["auth", "microservice", "express", "mongodb", "jwt"],
  "author": "Ganesh Patel",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "artillery": "^2.0.0",
    "mongodb-memory-server": "^9.1.3",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
